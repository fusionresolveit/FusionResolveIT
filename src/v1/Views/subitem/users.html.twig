{{ include('header.html.twig') }}
{{ include('headerForm.html.twig') }}

{% if data.show == 'groups' %}
  <table class="ui blue table">
    <thead>
      <tr>
        <th>{{ translation.name }}</th>
        <th>{{ translation.auto }}</th>
        <th>{{ translation.manager }}</th>
        <th>{{ translation.userdelegate }}</th>
        <th>{{ translation.active }}</th>
      </tr>
    </thead>
    <tbody>
      {% for user in data.users|sort((a, b) => a.user.name|lower <=> b.user.name|lower) %}
        <tr>
          <td>
            {% if user.url != '' %}
              <a href="{{ user.url }}">{{ user.name }}</a>
            {% else %}
              <span>{{ user.name }}</span>
            {% endif %}
          </td>
          {% if user.auto %}
            <td class="positive">
              <i class="check circle outline icon"></i>
              <span>{{ user.auto_val }}</span>
          {% else %}
            <td class="negative">
              <i class="times circle outline icon"></i>
              <span>{{ user.auto_val }}</span>
          {% endif %}
          </td>
          {% if user.is_manager %}
            <td class="positive">
              <i class="check circle outline icon"></i>
              <span>{{ user.is_manager_val }}</span>
          {% else %}
            <td class="negative">
              <i class="times circle outline icon"></i>
              <span>{{ user.is_manager_val }}</span>
          {% endif %}
          </td>
          {% if user.is_userdelegate %}
            <td class="positive">
              <i class="check circle outline icon"></i>
              <span>{{ user.is_userdelegate_val }}</span>
          {% else %}
            <td class="negative">
              <i class="times circle outline icon"></i>
              <span>{{ user.is_userdelegate_val }}</span>
          {% endif %}
          </td>
          {% if user.is_active %}
            <td class="positive">
              <i class="check circle outline icon"></i>
              <span>{{ user.is_active_val }}</span>
          {% else %}
            <td class="negative">
              <i class="times circle outline icon"></i>
              <span>{{ user.is_active_val }}</span>
          {% endif %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endif %}

{% if data.show == 'profiles' %}
  {% for key,item in data.users %}
    <h2>{{ item.name }}</h2>

    <table class="ui blue table">
      <thead>
        <tr>
          <th>{{ translation.name }}</th>
          <th>{{ translation.is_dynamic }}</th>
          <th>{{ translation.is_recursive }}</th>
        </tr>
      </thead>
      <tbody>
        {% for user in item.users %}
          <tr>
            <td>
              {% if user.url != '' %}
                <a href="{{ user.url }}">{{ user.name }}</a>
              {% else %}
                <span>{{ user.name }}</span>
              {% endif %}
            </td>
            {% if user.is_dynamic %}
              <td class="positive">
              <i class="check circle outline icon"></i>
            {% else %}
              <td class="negative">
              <i class="times circle outline icon"></i>
            {% endif %}
            <span>{{ user.is_dynamic_val }}</span>
            </td>
            {% if user.is_recursive %}
              <td class="positive">
              <i class="check circle outline icon"></i>
            {% else %}
              <td class="negative">
              <i class="times circle outline icon"></i>
            {% endif %}
            <span>{{ user.is_recursive_val }}</span>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% endfor %}
{% endif %}

