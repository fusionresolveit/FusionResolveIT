{{ include('header.html.twig') }}
{{ include('headerForm.html.twig') }}

<table class="ui blue table">
  <thead>
    <tr>
      <th>{{ translation.name }}</th>
      <th>{{ translation.comment }}</th>
    </tr>
  </thead>
  <tbody>
    {% for key,documentcategory in data.documentcategories %}
      <tr>
        <td>
          {% if documentcategory.url != '' %}
            <a href="{{ documentcategory.url }}">{{ documentcategory.name }}</a>
          {% else %}
            <span>{{ documentcategory.name }}</span>
          {% endif %}
        </td>
        <td>{{ documentcategory.comment }}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>

