{{ include('header.html.twig') }}
{{ include('headerForm.html.twig') }}

<table class="ui blue table">
  <thead>
    <tr>
      <th>{{ translation.name }}</th>
      <th>{{ translation.entity }}</th>
      <th>{{ translation.type }}</th>
      <th>{{ translation.phone }}</th>
      <th>{{ translation.fax }}</th>
      <th>{{ translation.website }}</th>
    </tr>
  </thead>
  <tbody>
    {% for supplier in data.suppliers %}
      <tr>
        <td>
          {% if supplier.url != '' %}
              <a href="{{ supplier.url }}">{{ supplier.name }}</a>
          {% else %}
              {{ supplier.name }}
          {% endif %}
        </td>
        <td>
          {% if supplier.entity_url != '' %}
              <a href="{{ supplier.entity_url }}">{{ supplier.entity }}</a>
          {% else %}
              {{ supplier.entity }}
          {% endif %}
        </td>
        <td>
          {% if supplier.type_url != '' %}
              <a href="{{ supplier.type_url }}">{{ supplier.type }}</a>
          {% else %}
              {{ supplier.type }}
          {% endif %}
        </td>
        <td>{{ supplier.phone }}</td>
        <td>{{ supplier.fax }}</td>
        <td>
          {% if supplier.website != '' %}
              <a href="{{ supplier.website }}" target="_blank">{{ supplier.website }}</a>
          {% endif %}
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>

{{ include('footer.html.twig') }}
