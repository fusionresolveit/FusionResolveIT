<table class="ui blue table">
  <thead>
    <tr>
      <th>{{ translation.name }}</th>
      <th>{{ translation.entity }}</th>
      <th>{{ translation.is_visible_computer }}</th>
      <th>{{ translation.is_visible_monitor }}</th>
      <th>{{ translation.is_visible_networkequipment }}</th>
      <th>{{ translation.is_visible_peripheral }}</th>
      <th>{{ translation.is_visible_phone }}</th>
      <th>{{ translation.is_visible_printer }}</th>
      <th>{{ translation.is_visible_softwarelicense }}</th>
      <th>{{ translation.is_visible_certificate }}</th>
      <th>{{ translation.is_visible_enclosure }}</th>
      <th>{{ translation.is_visible_pdu }}</th>
      <th>{{ translation.is_visible_line }}</th>
      <th>{{ translation.is_visible_rack }}</th>
      <th>{{ translation.is_visible_softwareversion }}</th>
      <th>{{ translation.is_visible_cluster }}</th>
      <th>{{ translation.is_visible_contract }}</th>
      <th>{{ translation.is_visible_appliance }}</th>
      <th>{{ translation.comment }}</th>
    </tr>
  </thead>
  <tbody>
    {% for state in data.states|sort((a, b) => a.state.name|lower <=> b.state.name|lower) %}
      <tr>
        <td>
          {% if state.url != '' %}
            <a href="{{ state.url }}">{{ state.name }}</a>
          {% else %}
            <span>{{ state.name }}</span>
          {% endif %}
        </td>
        <td>
          {% if state.entity_url != '' %}
            <a href="{{ state.entity_url }}">{{ state.entity }}</a>
          {% else %}
            <span>{{ state.entity }}</span>
          {% endif %}
        </td>
        {% if state.is_visible_computer %}
          <td class="positive">
          <i class="check circle outline icon"></i>
        {% else %}
          <td class="negative">
          <i class="times circle outline icon"></i>
        {% endif %}
        <span>{{ state.is_visible_computer_val }}</span>
        </td>
        {% if state.is_visible_monitor %}
          <td class="positive">
          <i class="check circle outline icon"></i>
        {% else %}
          <td class="negative">
