{{ include('header.html.twig') }}
{{ include('headerForm.html.twig') }}

<div class="ui stackable cards">
  {% for article in data.knowledgebasearticles|sort((a, b) => a.article.name|lower <=> b.article.name|lower) %}
    <div class="ui card">
      <div class="content">
        <div class="header">
          {% if article.url != '' %}
            <a href="{{ article.url }}">{{ article.name }}</a>
          {% else %}
            <span>{{ article.name }}</span>
          {% endif %}
        </div>
      </div>
      <div class="content">
        <div class="ui relaxed list">
          <div class="item">
            <div class="content">
              <a class="header">{{ translation.created_at }}</a>
              <div class="description">{{ article.created_at }}</div>
            </div>
          </div>
          <div class="item">
            <div class="content">
              <a class="header">{{ translation.updated_at }}</a>
              <div class="description">{{ article.updated_at }}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

{{ include('footer.html.twig') }}
