{{ include('headerForm.html.twig') }}

<table class="ui blue table">
  <thead>
    <tr>
      <th>{{ translation.name }}</th>
    </tr>
  </thead>
  <tbody>
    {% for appliance in data.appliances|sort((a, b) => a.appliance.name|lower <=> b.appliance.name|lower) %}
      <tr>
        <td>
          {% if appliance.url != '' %}
              <a href="{{ appliance.url }}">{{ appliance.name }}</a>
          {% else %}
              <span>{{ appliance.name }}</span>
          {% endif %}
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>

