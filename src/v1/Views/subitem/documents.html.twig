{{ include('header.html.twig') }}
{{ include('headerForm.html.twig') }}

<table class="ui blue table">
  <thead>
    <tr>
      <th>{{ translation.name }}</th>
      <th>{{ translation.entity }}</th>
      <th>{{ translation.file }}</th>
      <th>{{ translation.weblink }}</th>
      <th>{{ translation.rubrique }}</th>
      <th>{{ translation.mimetype }}</th>
      <th>{{ translation.balise }}</th>
      <th>{{ translation.date }}</th>
    </tr>
  </thead>
  <tbody>
    {% for document in data.documents %}
      <tr>
        <td>
          {% if document.url != '' %}
            <a href="{{ document.url }}">{{ document.name }}</a>
          {% else %}
            <span>{{ document.name }}</span>
          {% endif %}
        </td>
        <td>
          {% if document.entity_url != '' %}
            <a href="{{ document.entity_url }}">{{ document.entity }}</a>
          {% else %}
            <span>{{ document.entity }}</span>
          {% endif %}
        </td>
        <td>{{ document.file }}</td>
        <td>
          {% if document.weblink != '' %}
              <a href="{{ document.weblink }}" target="_blank">{{ document.weblink }}</a>
          {% endif %}
        </td>
        <td>
          {% if document.rubrique_url != '' %}
            <a href="{{ document.rubrique_url }}">{{ document.rubrique }}</a>
          {% else %}
            <span>{{ document.rubrique }}</span>
          {% endif %}
        </td>
        <td>{{ document.mimetype }}</td>
        <td>{{ document.balise }}</td>
        <td>{{ document.date }}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>

