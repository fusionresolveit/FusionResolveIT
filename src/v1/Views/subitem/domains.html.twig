{{ include('header.html.twig') }}
{{ include('headerForm.html.twig') }}

<div class="ui stackable cards">
    {% for domain in data.domains|sort((a, b) => a.domain.name|lower <=> b.domain.name|lower) %}
      <div class="ui card">
        <div class="content">
          <div class="header"><i class="globe icon"></i>{{ domain.name }}</div>
        </div>
        <div class="content">
          <div class="ui relaxed list">
            {% if data.show == 'domainrelations' %}
            <div class="item">
              <div class="content">
                <a class="header">{{ translation.name }}</a>
                <div class="description">
                  {% if domain.url != '' %}
                    <a href="{{ domain.url }}">{{ domain.name }}</a>
                  {% else %}
                    <span>{{ domain.name }}</span>
                  {% endif %}
                </div>
              </div>
            </div>
            {% endif %}
            <div class="item">
              <div class="content">
                <a class="header">{{ translation.entity }}</a>
                <div class="description">
                  {% if domain.entity_url != '' %}
                    <a href="{{ domain.entity_url }}">{{ domain.entity }}</a>
                  {% else %}
                    <span>{{ domain.entity }}</span>
                  {% endif %}
                </div>
              </div>
            </div>
            <div class="item">
              <div class="content">
                <a class="header">{{ translation.group }}</a>
                <div class="description">
                  {% if domain.group_url != '' %}
                    <a href="{{ domain.group_url }}">{{ domain.group }}</a>
                  {% else %}
                    <span>{{ domain.group }}</span>
                  {% endif %}
                </div>
              </div>
            </div>
            <div class="item">
              <div class="content">
                <a class="header">{{ translation.user }}</a>
                <div class="description">
                  {% if domain.user_url != '' %}
                    <a href="{{ domain.user_url }}">{{ domain.user }}</a>
                  {% else %}
                    <span>{{ domain.user }}</span>
                  {% endif %}
                </div>
              </div>
            </div>
            <div class="item">
              <div class="content">
                <a class="header">{{ translation.type }}</a>
                <div class="description">
                  {% if domain.type_url != '' %}
                    <a href="{{ domain.type_url }}">{{ domain.type }}</a>
                  {% else %}
                    <span>{{ domain.type }}</span>
                  {% endif %}
                </div>
              </div>
            </div>
            <div class="item">
              <div class="content">
                <a class="header">{{ translation.relation }}</a>
                <div class="description">
                  {% if domain.relation_url != '' %}
                    <a href="{{ domain.relation_url }}">{{ domain.relation }}</a>
                  {% else %}
                    <span>{{ domain.relation }}</span>
                  {% endif %}
                </div>
              </div>
            </div>
            <div class="item">
              <div class="content">
                <a class="header">{{ translation.date_create }}</a>
                <div class="description">{{ domain.date_create }}</div>
              </div>
            </div>
            <div class="item">
              <div class="content">
                <a class="header">{{ translation.date_exp }}</a>
                <div class="description" {% if domain.alert_expiration %}style="background-color: #f27960;"{% endif %}>{{ domain.date_exp }}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

{{ include('footer.html.twig') }}
