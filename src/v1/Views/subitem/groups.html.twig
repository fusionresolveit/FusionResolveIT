{{ include('header.html.twig') }}
{{ include('headerForm.html.twig') }}

{% if data.show == 'users' %}
  <table class="ui blue table">
    <thead>
      <tr>
        <th>{{ translation.name }}</th>
        <th>{{ translation.auto }}</th>
        <th>{{ translation.manager }}</th>
        <th>{{ translation.userdelegate }}</th>
      </tr>
    </thead>
    <tbody>
      {% for group in data.groups|sort((a, b) => a.group.name|lower <=> b.group.name|lower) %}
        <tr>
          <td>
            {% if group.url != '' %}
              <a href="{{ group.url }}">{{ group.name }}</a>
            {% else %}
              <span>{{ group.name }}</span>
            {% endif %}
          </td>
          {% if group.auto %}
            <td class="positive">
              <i class="check circle outline icon"></i>
              <span>{{ group.auto_val }}</span>
          {% else %}
            <td class="negative">
              <i class="times circle outline icon"></i>
              <span>{{ group.auto_val }}</span>
          {% endif %}
          </td>
          {% if group.is_manager %}
            <td class="positive">
              <i class="check circle outline icon"></i>
              <span>{{ group.is_manager_val }}</span>
          {% else %}
            <td class="negative">
              <i class="times circle outline icon"></i>
              <span>{{ group.is_manager_val }}</span>
          {% endif %}
          </td>
          {% if group.is_userdelegate %}
            <td class="positive">
              <i class="check circle outline icon"></i>
              <span>{{ group.is_userdelegate_val }}</span>
          {% else %}
            <td class="negative">
              <i class="times circle outline icon"></i>
              <span>{{ group.is_userdelegate_val }}</span>
          {% endif %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endif %}

{% if data.show == 'groups' %}
  <table class="ui blue table">
    <thead>
      <tr>
        <th>{{ translation.name }}</th>
        <th>{{ translation.entity }}</th>
        <th>{{ translation.comment }}</th>
      </tr>
    </thead>
    <tbody>
      {% for group in data.groups|sort((a, b) => a.group.name|lower <=> b.group.name|lower) %}
        <tr>
          <td>
            {% if group.url != '' %}
              <a href="{{ group.url }}">{{ group.name }}</a>
            {% else %}
              <span>{{ group.name }}</span>
            {% endif %}
          </td>
          <td>
            {% if group.entity_url != '' %}
              <a href="{{ group.entity_url }}">{{ group.entity }}</a>
            {% else %}
              <span>{{ group.entity }}</span>
            {% endif %}
          </td>
          <td>{{ group.comment }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endif %}

