<table class="ui blue table">
  <thead>
    <tr>
      <th>{{ translation.name }}</th>
      <th>{{ translation.begin }}</th>
      <th>{{ translation.end }}</th>
      <th>{{ translation.recurrent }}</th>
    </tr>
  </thead>
  <tbody>
    {% for key,holiday in data.holidays %}
      <tr>
        <td>
          {% if holiday.url != '' %}
            <a href="{{ holiday.url }}">{{ holiday.name }}</a>
          {% else %}
            <span>{{ holiday.name }}</span>
          {% endif %}
        </td>
        <td>{{ holiday.begin }}</td>
        <td>{{ holiday.end }}</td>
        {% if holiday.recurrent %}
          <td class="positive">
            <i class="check circle outline icon"></i>
            <span>{{ holiday.recurrent_val }}</span>
          </td>
        {% else %}
          <td class="negative">
            <i class="times circle outline icon"></i>
            <span>{{ holiday.recurrent_val }}</span>
          </td>
        {% endif %}
      </tr>
    {% endfor %}
  </tbody>
</table>

