<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

{% block js %}
  {% webpack_entry_js 'vendor' %}
{% endblock %}

{% block css %}
  {% webpack_entry_css 'vendor' %}
{% endblock %}

  <title>{{ header.title }}</title>
</head>
<body>
  
  <div class="ui grid">
    <div class="three wide left attached column">
      <div class="ui left vertical visible menu" style="border-radius: unset;width: 300px;border-top: unset;">
        <a href="{{ header.rootpath }}/view/home">
          <div class="item" style="display: flex;align-items: end;">
            <span class="ui small image logo">
            </span>
            <span class="bottom aligned content">
              <span class="ui blue large text" style="font-size: 1rem !important;">
                {{ include('version.html.twig') }}
              </span>
            </span>
          </div>          
        </a>
        <div class="item">
          {{ header.username }}
          <a href="{{ basePath }}/view/logout" style="float: right">
            <i class="sign out alternate large icon"></i>
          </a>
        </div>
        <div class="item">
          <div class="ui internally celled grid">
            <div class="row">
              <div class="three wide column" style="padding: unset;margin-top: 10px;">
                <button class="ui button icon basic" id="darkmode" type="button">
                  <i class="moon icon"></i>
                </button>
              </div>
              <div class="thirteen wide column">
                <a class="ui large label" id="headerChangeEntity">
                  <i class="exchange alternate icon"></i>
                  Entity | {{ header.entityname }}
                </a>
                <div style="display: none" id="headerEntityForm">
                  <form action="{{ basePath }}/view/changeprofileentity" method="post" class="ui form">
                    {% for item in header.profile %}
                      {{ include('fields.html.twig') }}
                    {% endfor %}
                    <input type="hidden" name="redirectURL" value="{{ current_url() }}">
                    <button class="ui primary button" type="submit" id="headerChangeButton">Save</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>

      {# <div class="item">
        <div class="ui icon input">
          <input type="text" placeholder="Search...">
          <i class="search icon"></i>
        </div>
      </div> #}
      {% for item in header.menu %}
        <div class="item">
          <div class="header">
            {{ item.name }}
            <i class="{{ item.icon }} icon"></i>
          </div>
          <div class="menu">
            {% for subitem in item.sub %}
              <a class="item {{ subitem.class }}" href="{{ subitem.link }}">
                {{ subitem.name }}
                <i class="{{ subitem.icon }} icon"></i>
              </a>
            {% endfor %}

            {% if item.more is defined and item.more|length > 0 %}
              <div class="ui dropdown item">
                More
                <i class="dropdown icon"></i>
                <div class="menu">
                  {% for moreitem in item.more %}
                    <a class="item {{ moreitem.class }}" href="{{ moreitem.link }}">
                      <i class="{{ moreitem.icon }} icon"></i>
                      {{ moreitem.name }}
                    </a>
                  {% endfor %}
                </div>
              </div>
            {% endif %}

            {% if item.dropdown is defined and item.dropdown|length > 0 %}
              <div class="ui dropdown item">
                Dropdown
                <i class="dropdown icon"></i>
                <div class="menu">
                  {% for moreitem in item.dropdown %}
                    <a class="item {{ moreitem.class }}" href="{{ moreitem.link }}">
                      <i class="{{ moreitem.icon }} icon"></i>
                      {{ moreitem.name }}
                    </a>
                  {% endfor %}
                </div>
              </div>
            {% endif %}

            {% if item.component is defined and item.component|length > 0 %}
              <div class="ui dropdown item">
                Component
                <i class="dropdown icon"></i>
                <div class="menu">
                  {% for moreitem in item.component %}
                    <a class="item {{ moreitem.class }}" href="{{ moreitem.link }}">
                      <i class="{{ moreitem.icon }} icon"></i>
                      {{ moreitem.name }}
                    </a>
                  {% endfor %}
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
      </div>
    </div>
    <div class="twelve wide right attached column">

    {# <!-- <div class="ui resizable scrolling wide long container" style="margin: 40px; margin-left: 300px !important"> -->
    <div class="overflowing pusher" style="margin: 20px;"> #}
    